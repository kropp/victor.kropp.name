{% extends "base.j2" %}

{% block main -%}
<article class="post">
<h2 class="title">
    <a href="{{ content_url(resource.url) }}">
        {{ resource.meta.title }}
    </a>
</h2>
<time datetime="{{ resource.meta.created.strftime('%Y-%m-%dT%H:%M+0100') }}">{{ resource.meta.created.strftime('%d.%m.%Y %H:%M') }}</time>

{% if resource.meta.tags %}
<ul class="tags clear">
{% for tag in resource.meta.tags %}
<li>
    <a class="label label-default" href="{{ content_url('blog/tags/'~tag~'.html') }}">
        {{ tag }}
    </a>
</li>
{% endfor %}
</ul>
{% endif %}
{% filter markdown|typogrify -%}
{% mark post -%}
{% block post -%}{%- endblock %}
{%- endmark %}
{%- endfilter %}

<div class="likely">
  <div class="twitter" data-via="kropp">Твитнуть</div>
  <div class="facebook">Поделиться</div>
  <div class="gplus">Плюсануть</div>
  <div class="vkontakte">Поделиться</div>
</div>

<ul class="pager">
{% if resource.prev_by_time %}
  <li class="previous"><a href="{{ content_url(resource.prev_by_time.url) }}">&larr; {{ resource.prev_by_time.meta.title }}</a></li>
{% endif %}

{% if resource.next_by_time %}
  <li class="next"><a href="{{ content_url(resource.next_by_time.url) }}">{{ resource.next_by_time.meta.title }} &rarr;</a></li>
{% endif %}
</ul>

</article>

{%- endblock %}
{% block scripts %}
<link href="http://fotorama.s3.amazonaws.com/4.1.16/fotorama.css" rel="stylesheet"> 
<script src="http://fotorama.s3.amazonaws.com/4.1.16/fotorama.js"></script>
<script>
$(document).ready(function() {
  $("time").timeago();
});
</script>
{% endblock %}
